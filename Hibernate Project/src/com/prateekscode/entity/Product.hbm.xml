<?xml version="1.0" encoding="UTF-8"?>

<!--import dtd rules  -->
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<!-- <class name="com.prateekscode.entity.Product" table="product"> -->
	
	<!-- to dynamic create insert query add 'dynamic-insert=true' attribute for the table represented by class tag -->
	<!-- to dynamic create update query add 'dynamic-update=true' attribute for the table represented by class tag -->
	<class name="com.prateekscode.entity.Product" table="product" dynamic-insert="true">
		
		<id name="pid" column="pid"></id>
		<property name="pname" column="pname"></property>
		<property name="qty" column="qty"></property>
		<property name="price" column="price"></property>
	</class>
</hibernate-mapping>  
    
    
  
